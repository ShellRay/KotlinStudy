<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.kotlin.study.widget.banner.BannerView
        android:id="@+id/BannerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="提示" />

        <com.kotlin.study.widget.banner.ViewPagerIndicator
            android:id="@+id/indicator_default"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#ffffff"
            android:layout_gravity="bottom"
            app:vpi_indicatorType="PROGRESS"
            app:vpi_default_color="#00ffff"
            app:vpi_selected_color="#FFff00ff"
            />
        <com.kotlin.study.widget.banner.ViewPagerIndicator
            android:id="@+id/indicator_not_anim"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#ffffff"
            app:vpi_default_color="#00ffff"
            android:layout_gravity="bottom"
            app:vpi_animation="false"
            app:vpi_indicatorType="CIRCLE_LINE"
            app:vpi_radius="10dp"
            app:vpi_selected_color="#FFff00ff"
            android:layout_below="@+id/indicator_default"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/indicator_not_anim"
            android:orientation="vertical">


        <com.kotlin.study.widget.banner.ViewPagerIndicator
            android:id="@+id/indicator_circle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#efefef"
            app:vpi_default_color="#cdcdcd"
            app:vpi_distance="80dp"
            app:vpi_distanceType="BY_DISTANCE"
            app:vpi_indicatorType="CIRCLE"
            app:vpi_radius="10dp"
            app:vpi_radius_selected="15dp"
            app:vpi_animation="false"
            app:vpi_selected_color="#F5A523"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线(line)"/>
        <com.kotlin.study.widget.banner.ViewPagerIndicator
            android:id="@+id/indicator_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#efefef"
            app:vpi_default_color="#cdcdcd"
            app:vpi_distance="800dp"
            app:vpi_distanceType="BY_LAYOUT"
            app:vpi_indicatorType="LINE"
            app:vpi_length="24dp"
            app:vpi_radius="8dp"
            app:vpi_selected_color="#FF23EEF5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="圆角矩形(circle_line)"/>
        <com.kotlin.study.widget.banner.ViewPagerIndicator
            android:id="@+id/indicator_circle_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#efefef"
            app:vpi_default_color="#FF239AF5"
            app:vpi_distance="60dp"
            app:vpi_distanceType="BY_LAYOUT"
            app:vpi_indicatorType="CIRCLE_LINE"
            app:vpi_radius="10dp"
            app:vpi_selected_color="#FF239AF5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="弹性球(bezier)"/>
        <com.kotlin.study.widget.banner.ViewPagerIndicator
            android:id="@+id/indicator_bezier"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#efefef"
            app:vpi_default_color="#cdcdcd"
            app:vpi_distance="80dp"
            app:vpi_distanceType="BY_DISTANCE"
            app:vpi_indicatorType="BEZIER"
            app:vpi_radius="15dp"
            app:vpi_selected_color="#FFA523F5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="弹簧粘性球(spring)"/>
        <com.kotlin.study.widget.banner.ViewPagerIndicator
            android:id="@+id/indicator_spring"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#efefef"
            app:vpi_default_color="#cdcdcd"
            app:vpi_distance="80dp"
            app:vpi_distanceType="BY_DISTANCE"
            app:vpi_indicatorType="SPRING"
            app:vpi_radius="15dp"
            app:vpi_selected_color="#FF23F57E"
            />
        </LinearLayout>
    </com.kotlin.study.widget.banner.BannerView>

</android.support.constraint.ConstraintLayout>
